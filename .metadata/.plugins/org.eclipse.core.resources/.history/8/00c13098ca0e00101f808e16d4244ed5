package Recursion;

public class CoinPermutation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[]= {1,2,3};
		int n=5;
			cc(arr, n, 0, "");
	}

	private static void cc(int[] arr, int n, int sum,String ans) {
		// TODO Auto-generated method stub
		if(sum==n) {
			System.out.println(ans);
			return;
		}
		if(sum>n) return;
		for(int i=0; i<arr.length;i++) {
			cc(arr, n, sum+arr[i], ans+arr[i]);
			
		}
	}

}
